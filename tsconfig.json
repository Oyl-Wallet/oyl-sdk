{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./lib",
    "declaration": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "baseUrl": "./src"
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*.ts", "src/**/**/*.ts"]
}
