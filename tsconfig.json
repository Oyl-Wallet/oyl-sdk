{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2022",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./lib",
    "declaration": true,
    "importHelpers": true,
    "types": ["node", "jest"],
    "baseUrl": "./src",
    "paths": {
      "@collectible/*": ["collectible/*"],
      "@account/*": ["account/*"],
      "@btc/*": ["btc/*"],
      "@brc20/*": ["brc20/*"],
      "@rune/*": ["rune/*"],
      "@signer/*": ["signer/*"],
      "@utxo/*": ["utxo/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*.ts"]
}
